<div class="bg-as">
  <div class="col-md-4">
    <div class="col-md-3"></div>
    <div class="col-md-9 all_category">
      <p>ALL CATEGORIES</p>
    </div>
  </div>
  <div class="col-md-8">
    <div class="col-md-9">  
      <span class="fa fa-search search-box"></span><input type="text" placeholder="Search products by SKU or name" class="form-control customize-ins">
    </div>
    <div class="col-md-3">
      <button class="btn cart_button side_nav"><span><i class='fa fa-shopping-cart '></i></span>MY CART</button><button class="btn cart_count side_nav">10</button>
    </div>
